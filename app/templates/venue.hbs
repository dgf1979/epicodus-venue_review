<h2>{{model.name}}</h2>
{{google-map address=model.mapAddress}}
<h4>{{model.description}}</h4>

{{#liquid-if reviewing class="liquid-if"}}
  <div>
    <div class="well form-group">
      {{input type="text" placeholder="Your Name" value=author}}
      {{input type="text" placeholder="What do you think?" value=body}}
      <button class="btn btn-danger" name="button" {{action 'addReview'}}>Post This Review</button>
    </div>
  </div>
{{else}}
  <button class="btn btn-danger" name="button" {{action 'showReview'}}>Add Review</button>
{{/liquid-if}}

<br><br>

<div class="well liquid-ul">
  <h4>Reviews:</h4>
  {{#liquid-with model.reviews as |reviews|}}
    {{#each review in reviews}}
      <div class="review-author">
        <span>{{review.author}}</span>
        <span class="descriptor">posted {{date-format review.date}}</span>:
      </div>
      <div class="review">
        <div class="body">
          {{review.body}}
        </div>
      </div>
      <hr>
    {{/each}}
  {{/liquid-with}}
</div>
